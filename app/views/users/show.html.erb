<p style="color: green"><strong><%= notice %></strong></p>
<div class="container">
  <h1><%= @user.name.capitalize %></h1>
  <div class="d-flex mb-3">
    <%= link_to "Back", users_path, class:"btn btn-sm btn-secondary me-2" %>
    <%= link_to "Edit", edit_user_path(@user), class:"btn btn-sm btn-warning me-2" %>

    <%= button_to "Delete", @user, method: :delete, class:"btn btn-sm btn-danger" %>
  </div>

  <p>
    <strong>Email:</strong>
    <%= @user.email.downcase %>
  </p>
  <p>
    <strong>Phone:</strong>
    <%= @user.phone %>
  </p>
  <p>
    <strong>CPF:</strong>
    <%= @user.cpf %>
  </p>
</div>

<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div style="color: red">
      <h5><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h5>
      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3 row">
    <%= form.label :name, style: "display: block", class:"col-sm-2 col-form-label"  %>
    <div class="col-sm-4">
      <%= form.text_field :name, class:"form-control input-sm"  %>
    </div>
  </div>

  <div class="mb-3 row">
    <%= form.label :email, style: "display: block", class:"col-sm-2 col-form-label"  %>
    <div class="col-sm-4">
      <%= form.text_field :email, class:"form-control input-sm"  %>
    </div>
  </div>

  <div class="mb-3 row">
    <%= form.label :phone, style: "display: block", class:"col-sm-2 col-form-label"  %>
    <div class="col-sm-4">
      <%= form.text_field :phone, class:"form-control input-sm"  %>
    </div>
  </div>

  <div class="mb-3 row">
    <%= form.label :cpf, style: "display: block", class:"col-sm-2 col-form-label"  %>
    <div class="col-sm-4">
      <%= form.text_field :cpf, class:"form-control input-sm"  %>
    </div>
  </div>

  <%= form.submit class:"btn btn-primary" %>

<% end %>
